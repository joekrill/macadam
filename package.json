{
  "name": "@macadam/root",
  "version": "1.0.0",
  "repository": "https://github.com/joekrill/macadam.git",
  "author": "Joe Krill <joe@joekrill.com>",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@yarnpkg/pnpify": "^3.1.1",
    "eslint": "^7.32.0",
    "eslint-config-react-app": "^7.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "2.6.1",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "postinstall": "husky install",
    "format": "yarn prettier --write .",
    "format:check": "yarn prettier --check .",
    "lint": "yarn eslint . --fix",
    "lint:check": "yarn eslint .",
    "ci": "yarn run format:check && yarn run typecheck && yarn run test",
    "typecheck": "yarn workspaces foreach run typecheck",
    "test": "yarn workspaces foreach run test",
    "yarn:upgrade": "yarn set version latest && yarn dlx @yarnpkg/sdks && yarn plugin import @yarnpkg/plugin-interactive-tools && yarn plugin import @yarnpkg/plugin-typescript && yarn plugin import @yarnpkg/plugin-workspace-tools",
    "build-image:client-web": "docker build -f ./packages/client-web/Dockerfile .",
    "build-image:api-server": "docker build -f ./packages/api-server/Dockerfile ."
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "dependenciesMeta": {
    "open@7.4.2": {
      "unplugged": true
    }
  },
  "packageManager": "yarn@3.1.1"
}
