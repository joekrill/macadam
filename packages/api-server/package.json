{
  "name": "api-server",
  "version": "1.0.0",
  "main": "build/server.js",
  "files": [
    "build/"
  ],
  "scripts": {
    "start:dev": "nodemon --signal SIGTERM --watch src -e ts,tsx --exec ts-node src/server.ts | pino-pretty",
    "start": "node build/server.js",
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --collect-coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --projects test/unit",
    "test:integration": "jest --projects test/integration",
    "migrate:up": "mikro-orm migration:up",
    "migrate:create": "mikro-orm migration:create",
    "cache:generate": "mikro-orm cache:generate",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@casl/ability": "^5.4.3",
    "@faker-js/faker": "^6.0.0",
    "@koa/cors": "^3.2.0",
    "@koa/router": "^10.1.1",
    "@mikro-orm/core": "^5.1.1",
    "@mikro-orm/migrations": "^5.1.1",
    "@mikro-orm/postgresql": "^5.1.1",
    "@mikro-orm/reflection": "^5.1.1",
    "@opentelemetry/api": "^1.1.0",
    "@opentelemetry/auto-instrumentations-node": "^0.28.0",
    "@opentelemetry/instrumentation-koa": "^0.28.1",
    "@opentelemetry/metrics": "^0.24.0",
    "@opentelemetry/sdk-node": "^0.27.0",
    "@ory/kratos-client": "0.8.2-alpha.1",
    "@sentry/node": "^6.19.2",
    "cross-fetch": "^3.1.5",
    "deep-map-keys": "^2.0.1",
    "errorish": "^1.0.0",
    "http-errors": "^2.0.0",
    "ioredis": "^4.28.5",
    "koa": "^2.13.4",
    "koa-body": "^4.2.0",
    "koa-compose": "^4.1.0",
    "koa-helmet": "^6.1.0",
    "nodemailer": "^6.7.3",
    "pino": "^7.9.2",
    "pino-pretty": "^7.6.0",
    "prom-client": "^14.0.1",
    "rate-limiter-flexible": "^2.3.6",
    "uuid": "^8.3.2",
    "zod": "^3.14.2"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^5.1.1",
    "@mikro-orm/sqlite": "^5.1.1",
    "@shopify/jest-koa-mocks": "^3.1.5",
    "@types/http-errors": "^1.8.2",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^27.4.1",
    "@types/koa": "^2.13.4",
    "@types/koa-compose": "^3.2.5",
    "@types/koa__cors": "^3.1.1",
    "@types/koa__router": "^8.0.11",
    "@types/node": "^16.11.26",
    "@types/nodemailer": "^6.4.4",
    "@types/pino": "^7.0.5",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "jest": "^27.5.1",
    "jest-mock-axios": "^4.5.0",
    "nodemon": "^2.0.15",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.5.5"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/features/db/cli.config.ts",
      "./build/features/db/cli.config.js"
    ]
  }
}
