{
  "name": "api-server",
  "version": "0.1.0",
  "main": "build/server.js",
  "scripts": {
    "start:dev": "nodemon --signal SIGTERM --watch src -e ts,tsx --exec ts-node src/server.ts | pino-pretty",
    "start": "node build/server.js",
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --collect-coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --projects test/unit",
    "test:integration": "jest --projects test/integration",
    "migrate:up": "mikro-orm migration:up",
    "migrate:create": "mikro-orm migration:create",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@casl/ability": "^5.4.3",
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.1.1",
    "@mikro-orm/core": "^4.5.9",
    "@mikro-orm/migrations": "^4.5.9",
    "@mikro-orm/postgresql": "^4.5.9",
    "@ory/kratos-client": "0.8.2-alpha.1",
    "@sentry/node": "^6.16.1",
    "cross-fetch": "^3.1.4",
    "deep-map-keys": "^2.0.1",
    "errorish": "^1.0.0",
    "faker": "^5.5.3",
    "http-errors": "^1.8.1",
    "ioredis": "^4.28.2",
    "koa": "^2.13.4",
    "koa-body": "^4.2.0",
    "koa-compose": "^4.1.0",
    "koa-helmet": "^6.1.0",
    "pino": "^7.5.1",
    "pino-pretty": "^7.3.0",
    "prom-client": "^14.0.1",
    "rate-limiter-flexible": "^2.3.6",
    "uuid": "^8.3.2",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^4.5.9",
    "@mikro-orm/sqlite": "^4.5.9",
    "@shopify/jest-koa-mocks": "^3.0.8",
    "@types/faker": "^5.5.9",
    "@types/http-errors": "^1.8.1",
    "@types/ioredis": "^4.28.5",
    "@types/jest": "^27.0.3",
    "@types/koa": "^2.13.4",
    "@types/koa-compose": "^3.2.5",
    "@types/koa__cors": "^3.1.0",
    "@types/koa__router": "^8.0.11",
    "@types/node": "^16.11.14",
    "@types/pino": "^7.0.5",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.3",
    "jest": "^27.4.5",
    "jest-mock-axios": "^4.5.0",
    "nodemon": "^2.0.15",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/features/db/cli.config.ts",
      "./build/features/db/cli.config.js"
    ]
  }
}
