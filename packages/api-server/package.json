{
  "name": "@macadam/api-server",
  "version": "1.0.0",
  "main": "build/server.js",
  "type": "module",
  "files": [
    "build/"
  ],
  "scripts": {
    "start:dev": "tsc-watch --onSuccess \"yarn run start:dev:run\"",
    "start:dev:run": "node --experimental-modules ./build/server.js | pino-pretty",
    "start": "node build/server.js",
    "build": "tsc",
    "test": "yarn node --no-warnings --experimental-vm-modules $(yarn bin jest)",
    "test:coverage": "jest --collect-coverage",
    "test:watch": "jest --watch",
    "test:unit": "yarn test --projects test/unit",
    "test:integration": "yarn test --projects test/integration",
    "migration:up": "yarn run build && mikro-orm-esm migration:up",
    "migration:create": "mikro-orm-esm migration:create",
    "schema:dump": "mikro-orm-esm schema:create --dump",
    "cache:generate": "mikro-orm-esm cache:generate",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@casl/ability": "^6.5.0",
    "@faker-js/faker": "^8.2.0",
    "@jest/globals": "^29.7.0",
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.1",
    "@mikro-orm/core": "^5.9.3",
    "@mikro-orm/migrations": "^5.9.3",
    "@mikro-orm/postgresql": "^5.9.3",
    "@mikro-orm/reflection": "^5.9.3",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@opentelemetry/api": "^1.6.0",
    "@opentelemetry/auto-instrumentations-node": "^0.39.4",
    "@opentelemetry/instrumentation-koa": "^0.36.1",
    "@opentelemetry/metrics": "^0.24.0",
    "@opentelemetry/sdk-node": "^0.44.0",
    "@ory/kratos-client": "1.0.0",
    "@sentry/node": "^7.75.0",
    "cross-fetch": "^4.0.0",
    "deep-map-keys": "^2.0.1",
    "errorish": "^1.0.0",
    "http-errors": "^2.0.0",
    "ioredis": "^5.3.2",
    "json-stringify-deterministic": "^1.0.12",
    "koa": "^2.14.2",
    "koa-body": "^6.0.1",
    "koa-compose": "^4.1.0",
    "koa-helmet": "^7.0.2",
    "lru-cache": "^10.0.1",
    "nodemailer": "^6.9.7",
    "pino": "^8.16.1",
    "pino-pretty": "^10.2.3",
    "prom-client": "^15.0.0",
    "rate-limiter-flexible": "^3.0.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^5.9.3",
    "@mikro-orm/sqlite": "^5.9.3",
    "@types/http-errors": "^2.0.3",
    "@types/jest": "^29.5.6",
    "@types/koa": "^2.13.9",
    "@types/koa-compose": "^3.2.7",
    "@types/koa__cors": "^4.0.2",
    "@types/koa__router": "^12.0.2",
    "@types/node": "^18.18.6",
    "@types/nodemailer": "^6.4.13",
    "@types/pino": "^7.0.5",
    "@types/supertest": "^2.0.15",
    "@types/uuid": "^9.0.6",
    "jest": "^29.7.0",
    "jest-mock-axios": "^4.7.3",
    "sqlite3": "5.1.6",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.2.2"
  },
  "mikro-orm": {
    "useTsNode": false,
    "configPaths": [
      "./build/features/db/cli.config.js"
    ]
  }
}
