{
  "name": "@macadam/api-server",
  "version": "1.0.0",
  "main": "build/server.js",
  "type": "module",
  "files": [
    "build/"
  ],
  "scripts": {
    "start:dev": "tsc-watch --noClear --onSuccess \"node -r ../../.pnp.cjs --experimental-modules --import ./build/instrumentation.js ./build/server.js\"",
    "start": "node --import ./build/instrumentation.js build/server.js",
    "build": "tsc",
    "test": "yarn node --no-warnings --experimental-vm-modules $(yarn bin jest)",
    "test:coverage": "jest --collect-coverage",
    "test:watch": "jest --watch",
    "test:unit": "yarn test --projects test/unit",
    "test:integration": "yarn test --projects test/integration",
    "migration:up": "yarn run build && mikro-orm-esm migration:up",
    "migration:create": "mikro-orm-esm migration:create",
    "schema:dump": "mikro-orm-esm schema:create --dump",
    "cache:generate": "mikro-orm-esm cache:generate",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@casl/ability": "^6.5.0",
    "@faker-js/faker": "^8.3.1",
    "@jest/globals": "^29.7.0",
    "@koa/cors": "^5.0.0",
    "@koa/router": "^12.0.1",
    "@mikro-orm/cli": "^6.0.5",
    "@mikro-orm/core": "^6.0.5",
    "@mikro-orm/migrations": "^6.0.5",
    "@mikro-orm/postgresql": "^6.0.5",
    "@mikro-orm/reflection": "^6.0.5",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@mikro-orm/sqlite": "^6.0.5",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/auto-instrumentations-node": "^0.40.3",
    "@opentelemetry/exporter-prometheus": "^0.47.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.47.0",
    "@opentelemetry/resources": "^1.20.0",
    "@opentelemetry/sdk-node": "^0.47.0",
    "@opentelemetry/semantic-conventions": "^1.20.0",
    "@ory/kratos-client": "1.0.0",
    "@sentry/node": "^7.94.1",
    "cross-fetch": "^4.0.0",
    "deep-map-keys": "^2.0.1",
    "errorish": "^1.0.0",
    "http-errors": "^2.0.0",
    "ioredis": "^5.3.2",
    "json-stringify-deterministic": "^1.0.12",
    "koa": "^2.15.0",
    "koa-body": "^6.0.1",
    "koa-compose": "^4.1.0",
    "koa-helmet": "^7.0.2",
    "lru-cache": "^10.1.0",
    "nodemailer": "^6.9.8",
    "opentelemetry-node-metrics": "^3.0.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "rate-limiter-flexible": "^4.0.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.11",
    "@types/koa": "^2.14.0",
    "@types/koa-compose": "^3.2.8",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/node": "^20.11.5",
    "@types/nodemailer": "^6.4.14",
    "@types/pino": "^7.0.5",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "jest-mock-axios": "^4.7.3",
    "sqlite3": "5.1.7",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.3.3"
  },
  "mikro-orm": {
    "useTsNode": false,
    "configPaths": [
      "./build/features/db/cli.config.js"
    ]
  }
}
