{
  "name": "@macadam/api-server",
  "version": "1.0.0",
  "main": "build/server.js",
  "files": [
    "build/"
  ],
  "scripts": {
    "start:dev": "nodemon --signal SIGTERM --watch src -e ts,tsx --exec ts-node src/server.ts | pino-pretty",
    "start": "node build/server.js",
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --collect-coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --projects test/unit",
    "test:integration": "jest --projects test/integration",
    "migrate:up": "mikro-orm migration:up",
    "migrate:create": "mikro-orm migration:create",
    "cache:generate": "mikro-orm cache:generate",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@casl/ability": "^6.5.0",
    "@faker-js/faker": "^8.1.0",
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "@mikro-orm/core": "^5.8.3",
    "@mikro-orm/migrations": "^5.8.3",
    "@mikro-orm/postgresql": "^5.8.3",
    "@mikro-orm/reflection": "^5.8.3",
    "@opentelemetry/api": "^1.6.0",
    "@opentelemetry/auto-instrumentations-node": "^0.39.2",
    "@opentelemetry/instrumentation-koa": "^0.36.0",
    "@opentelemetry/metrics": "^0.24.0",
    "@opentelemetry/sdk-node": "^0.43.0",
    "@ory/kratos-client": "1.0.0",
    "@sentry/node": "^7.71.0",
    "cross-fetch": "^4.0.0",
    "deep-map-keys": "^2.0.1",
    "errorish": "^1.0.0",
    "http-errors": "^2.0.0",
    "ioredis": "^5.3.2",
    "koa": "^2.14.2",
    "koa-body": "^6.0.1",
    "koa-compose": "^4.1.0",
    "koa-helmet": "^7.0.2",
    "nodemailer": "^6.9.5",
    "pino": "^8.15.1",
    "pino-pretty": "^10.2.0",
    "prom-client": "^14.2.0",
    "rate-limiter-flexible": "^3.0.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^5.8.3",
    "@mikro-orm/sqlite": "^5.8.3",
    "@shopify/jest-koa-mocks": "^5.1.1",
    "@types/http-errors": "^2.0.2",
    "@types/jest": "^29.5.5",
    "@types/koa": "^2.13.9",
    "@types/koa-compose": "^3.2.6",
    "@types/koa__cors": "^4.0.1",
    "@types/koa__router": "^12.0.1",
    "@types/node": "^18.17.18",
    "@types/nodemailer": "^6.4.11",
    "@types/pino": "^7.0.5",
    "@types/supertest": "^2.0.13",
    "@types/uuid": "^9.0.4",
    "jest": "^29.7.0",
    "jest-mock-axios": "^4.7.3",
    "nodemon": "^3.0.1",
    "sqlite3": "5.1.6",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/features/db/cli.config.ts",
      "./build/features/db/cli.config.js"
    ]
  }
}
