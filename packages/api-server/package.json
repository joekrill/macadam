{
  "name": "@macadam/api-server",
  "version": "1.0.0",
  "main": "build/server.js",
  "files": [
    "build/"
  ],
  "scripts": {
    "start:dev": "nodemon --signal SIGTERM --watch src -e ts,tsx --exec ts-node src/server.ts | pino-pretty",
    "start": "node build/server.js",
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --collect-coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --projects test/unit",
    "test:integration": "jest --projects test/integration",
    "migrate:up": "mikro-orm migration:up",
    "migrate:create": "mikro-orm migration:create",
    "cache:generate": "mikro-orm cache:generate",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@casl/ability": "^6.3.3",
    "@faker-js/faker": "^7.6.0",
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "@mikro-orm/core": "^5.6.12",
    "@mikro-orm/migrations": "^5.6.12",
    "@mikro-orm/postgresql": "^5.6.12",
    "@mikro-orm/reflection": "^5.6.12",
    "@opentelemetry/api": "^1.4.0",
    "@opentelemetry/auto-instrumentations-node": "^0.36.3",
    "@opentelemetry/instrumentation-koa": "^0.34.1",
    "@opentelemetry/metrics": "^0.24.0",
    "@opentelemetry/sdk-node": "^0.35.1",
    "@ory/kratos-client": "0.11.1",
    "@sentry/node": "^7.38.0",
    "cross-fetch": "^3.1.5",
    "deep-map-keys": "^2.0.1",
    "errorish": "^1.0.0",
    "http-errors": "^2.0.0",
    "ioredis": "^5.3.1",
    "koa": "^2.14.1",
    "koa-body": "^6.0.1",
    "koa-compose": "^4.1.0",
    "koa-helmet": "^6.1.0",
    "nodemailer": "^6.9.1",
    "pino": "^8.11.0",
    "pino-pretty": "^9.4.0",
    "prom-client": "^14.1.1",
    "rate-limiter-flexible": "^2.4.1",
    "uuid": "^9.0.0",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^5.6.12",
    "@mikro-orm/sqlite": "^5.6.12",
    "@shopify/jest-koa-mocks": "^5.0.1",
    "@types/http-errors": "^2.0.1",
    "@types/jest": "^29.4.0",
    "@types/koa": "^2.13.5",
    "@types/koa-compose": "^3.2.5",
    "@types/koa__cors": "^3.3.1",
    "@types/koa__router": "^12.0.0",
    "@types/node": "^18.14.1",
    "@types/nodemailer": "^6.4.7",
    "@types/pino": "^7.0.5",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.1",
    "jest": "^29.4.3",
    "jest-mock-axios": "^4.7.0-beta4",
    "nodemon": "^2.0.20",
    "sqlite3": "5.1.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/features/db/cli.config.ts",
      "./build/features/db/cli.config.js"
    ]
  }
}
